<%= button_to 'Discover Page', user_discover_index_path(@user), method: :get %>
<ol>
  <% if @top_movies %>
    <h3>Top 20 Rated Movies</h3>
    <% @top_movies.each do |movie| %>
      <li><%= link_to movie.title, user_movie_path(@user, movie.id) %> | Vote Average: <%= movie.vote_average %></li>
    <% end %>
  <% elsif @search_movies %>
    <h3>Movie results for <%= params[:keyword] %></h3>
    <% @search_movies.each do |movie| %>
        <li><%= link_to movie.title, user_movie_path(@user, movie.id) %> | Vote Average: <%= movie.vote_average %></li>
    <% end %>
  <% end %>
</ol>