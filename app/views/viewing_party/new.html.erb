<%= form_with url: "/users/#{@user.id}/movies/#{@movie.id}/viewing_party", method: :post, local: true do |f| %>
  <%= f.label :duration %>
  <%= f.number_field :duration, value: @movie.runtime, min: @movie.runtime %>

  <%= f.label :start_day %>
  <%= f.date_field :start_day, data:{ provide:'datepicker' } %>

  <%= f.label :start_time %>
  <%= f.time_field :start_time %>

  <% @users.each do |user| %>
    <%= check_box_tag(user.id, hidden_field: :status, value: "Invited") %><%= user.name %> (<%= user.email %>)
  <% end %>

  <%= f.submit 'Create Party' %>
<% end %>